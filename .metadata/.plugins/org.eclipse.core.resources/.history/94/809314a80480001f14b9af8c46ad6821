package oo.herenca;

public class Jogo {
	public static void main(String[] args) {
		Monstro j1 = new Monstro();
		j1.x = 10;
		j1.y = 10;
		
		Heroi j2 = new Heroi();
		j2.x = 10;
		j2.y = 11;
		
		
		System.out.println("J1 antes do ataque " + j1.vida);
		System.out.println("J2 antes do ataque " + j2.vida);
		
		j1.atacar(j2);
		j2.atacar(j1);
		
		System.out.println("J1 depois do ataque " + j1.vida);
		System.out.println("J2 depois do ataque " + j2.vida);
	}

}
