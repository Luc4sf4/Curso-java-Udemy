package oo.composicao;

public class Carro {

	Motor motor = new Motor();

	void acelarar() {
		motor.fatorInjecao += 0.4;
	}

	void freiar() {
		if(motor.fatorInjecao)
		motor.fatorInjecao -= 0.4;
	}

	void ligar() {
		motor.ligado = true;
	}

	void desligar() {
		motor.ligado = false;
	}

	boolean estarLigado() {
		return motor.ligado;
	}

}
