package fundamentos;

import java.util.Scanner;

public class Console {
	public static void main(String[] args) {
		System.out.print("Bom");
		System.out.print(" dia! \n\n");
		
		System.out.println("Bom");
		System.out.println("dia");
		
		System.out.printf("Megasena: %d %d %d %d %d %d %n", 1, 2, 3, 4, 5, 6, 7);
		System.out.printf("Sal√°rio: %1f %n" , 1234.5678);
		
		Scanner tcd = new Scanner(System.in);
		
		System.out.print("Digite seu nome: ");
		String nome = tcd.nextLine();
		
		System.out.print("Digite seu nome: ");
		String sobrenome = tcd.nextLine();
		
		System.out.print("Digite a sua idade: ");
		int idade = tcd.nextInt();
		
		
		System.out.println("\n\nNome = ", nome, sobrenome, idade);
	}
}
