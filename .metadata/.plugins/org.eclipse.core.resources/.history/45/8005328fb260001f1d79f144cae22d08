package classe;

public class Data {

	int dia;
	int mes;
	int ano;

	Data() {
//		dia = 1;
//		mes = 1;
//		ano = 1970;
		//this como metodo sรณ poder usar dentro de outro construtor e serve pra chamar de 
		this(1, 1, 1970);
	}

	// o "this." referenciar o objeto que esta sendo criado naquele momento
	Data(int dia, int mes, int ano) {
		// como acessar a variavel de instancia ?
		this.dia = dia;// pega o valor que recebeu como parametro e altera a variavel de instancia
		this.mes = mes;
		this.ano = ano;
	}

	String obterDataFormatada() {
		return String.format("%d/%d/%d", dia, mes, ano);
	}

	void imprimirDataFormatada() {
		System.out.println(obterDataFormatada());
	}

}
